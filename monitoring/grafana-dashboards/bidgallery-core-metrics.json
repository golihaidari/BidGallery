{
  "title": "BidGallery - Core Metrics",
  "tags": ["bidgallery"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Total Bids",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(checkout_bid_duration_seconds_count)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "value"
      },
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Bid Success Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "100 * (sum(checkout_bid_duration_seconds_count{success=\"true\"}) / sum(checkout_bid_duration_seconds_count))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "red", "value": 50},
              {"color": "yellow", "value": 70},
              {"color": "green", "value": 90}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "background"
      },
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0}
    },
    {
      "id": 3,
      "title": "Total Orders",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(checkout_order_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "value"
      },
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 6}
    },
    {
      "id": 4,
      "title": "Order Success Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "100 * (sum(checkout_order_total{success=\"true\"}) / sum(checkout_order_total))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "red", "value": 50},
              {"color": "yellow", "value": 70},
              {"color": "green", "value": 90}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "background"
      },
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 6}
    },
    {
      "id": 5,
      "title": "CPU Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "process_cpu_usage * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "green", "value": 70},
              {"color": "yellow", "value": 90},
              {"color": "red", "value": 100}
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "orientation": "horizontal",
        "textMode": "value",
        "colorMode": "background"
      },
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 12}
    }
  ],
  "time": {"from": "now-6h", "to": "now"},
  "refresh": "30s"
}